<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MyDMG_app.Views"
    x:Class="MyDMG_app.AppShell"
    FlyoutBehavior="Disabled">

    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="HomePage" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate views:RegisterPage}" />
    <ShellContent Route="CrearCortejoPage" ContentTemplate="{DataTemplate views:CrearCortejoPage}" />
    <ShellContent Route="DetalleCortejoPage" ContentTemplate="{DataTemplate views:DetalleCortejoPage}" />
    <ShellContent Route="CrearRecorridoPage" ContentTemplate="{DataTemplate views:CrearRecorridoPage}" />
    <ShellContent Route="DetalleRecorridoPage" ContentTemplate="{DataTemplate views:DetalleRecorridoPage}" />

</Shell>

 
    