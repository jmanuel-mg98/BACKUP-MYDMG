<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MyDMG_app.ViewModels"
             x:Class="MyDMG_app.Views.CrearCortejoPage"
             Title="Crear Cortejo">

    <ContentPage.BindingContext>
        <viewModels:CrearCortejoViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Entry Placeholder="Nombre Cortejo" Text="{Binding NombreCortejo}" />
            <Entry Placeholder="NÃºmero de Participantes" Keyboard="Numeric" Text="{Binding NParticipantes}" />
            <Switch IsToggled="{Binding EsPaso}" />
            <Entry Placeholder="Cantidad Pasos" Keyboard="Numeric" Text="{Binding CantidadPasos}" />
            <Switch IsToggled="{Binding LlevaBanda}" />

            <Button Text="Crear Cortejo" Command="{Binding CrearCortejoCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

