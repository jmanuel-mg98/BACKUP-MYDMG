<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MyDMG_app.ViewModels"
             x:Class="MyDMG_app.Views.CrearCortejoPage"
             Title="Crear Cortejo">

    <ContentPage.BindingContext>
        <viewModels:CrearCortejoViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Botón de regresar -->
            <Button Text="Atrás" Command="{Binding VolverHomeCommand}" />

            <!-- Campos del formulario -->
            <Entry Placeholder="Nombre del Cortejo" Text="{Binding NombreCortejo}" />
            <Entry Placeholder="Número de Participantes" Keyboard="Numeric" Text="{Binding NParticipantes}" />
            <Entry Placeholder="Es Paso (true/false)" Text="{Binding EsPaso}" />
            <Entry Placeholder="Cantidad de Pasos" Keyboard="Numeric" Text="{Binding CantidadPasos}" />
            <Entry Placeholder="Lleva Banda (true/false)" Text="{Binding LlevaBanda}" />

            <!-- Botón de crear cortejo -->
            <Button Text="Crear Cortejo" Command="{Binding CrearCortejoCommand}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

