<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MyDMG_app.ViewModels"
             x:Class="MyDMG_app.Views.CrearRecorridoPage"
             Title="Crear Recorrido">

    <ContentPage.BindingContext>
        <viewModels:CrearRecorridoViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Crear Nuevo Recorrido" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <!-- Nombre del Recorrido -->
            <Label Text="Nombre del recorrido:" FontSize="16" />
            <Entry Placeholder="Ej: Recorrido Semana Santa 2025" 
                   Text="{Binding Nombre}" />

            <!-- Lugar de Partida -->
            <Label Text="Lugar de origen:" FontSize="16" Margin="0,10,0,0" />
            <Entry Placeholder="Ej: Iglesia de San Pedro" 
                   Text="{Binding LugarPartida}" />

            <!-- Selector de Cortejo -->
            <Label Text="Elegir cortejo:" FontSize="16" Margin="0,10,0,0" />
            <Picker ItemsSource="{Binding Cortejos}"
                    ItemDisplayBinding="{Binding NombreCortejo}"
                    SelectedItem="{Binding CortejoSeleccionado}"
                    Title="Seleccione un cortejo" />

            <!-- Duración del Recorrido -->
            <Label Text="Duración del recorrido:" FontSize="16" Margin="0,10,0,0" />
            <TimePicker Time="{Binding Duracion}" 
                        Format="HH:mm"
                        HorizontalOptions="Start" />
            <Label Text="(Formato: Horas:Minutos)" 
                   FontSize="12" 
                   TextColor="Gray" />

            <!-- Botones -->
            <Button Text="Crear Recorrido" 
                    Command="{Binding CrearRecorridoCommand}"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    Margin="0,20,0,0" />

            <Button Text="Volver" 
                    Command="{Binding VolverHomeCommand}"
                    BackgroundColor="#6C757D"
                    TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>