<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MyDMG_app.ViewModels"
             x:Class="MyDMG_app.Views.HomePage"
             Title="Inicio">

    <ContentPage.BindingContext>
        <viewModels:HomeViewModel />
    </ContentPage.BindingContext>

    <!-- Toda la página scrolleable -->
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Bienvenido a MyDMG App" FontSize="24" HorizontalOptions="Center" />
            <Label Text="{Binding NombreUsuario}" FontSize="18" HorizontalOptions="Center" />
            <Label Text="{Binding Hermandad}" FontSize="18" HorizontalOptions="Center" />

            <!-- Botones Crear Cortejo y Crear Recorrido -->
            <Button Text="Crear Cortejo" Command="{Binding CrearCortejoCommand}" />
            <Button Text="Crear Recorrido" Command="{Binding CrearRecorridoCommand}" />

            <!-- Título Listado de Cortejos -->
            <Label Text="Mis Cortejos" FontSize="20" FontAttributes="Bold" Margin="0,20,0,5" />

            <!-- Listado de Cortejos -->
            <CollectionView ItemsSource="{Binding Cortejos}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedCortejo, Mode=TwoWay}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="#EEE" CornerRadius="8">
                            <StackLayout>
                                <Label Text="{Binding NombreCortejo}" FontSize="16" />
                                <Label Text="{Binding NParticipantes, StringFormat='Participantes: {0}'}" />
                                <Label Text="{Binding CantidadPasos, StringFormat='Cantidad Pasos: {0}'}" />
                                <Label Text="{Binding VelocidadMedia, StringFormat='Velocidad Media: {0:F2}'}" />
                            </StackLayout>

                            <!-- Detectar tap y ejecutar comando -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:HomeViewModel}}, Path=SeleccionarCortejoCommand}" 
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Título Listado de Recorridos -->
            <Label Text="Mis Recorridos" FontSize="20" FontAttributes="Bold" Margin="0,20,0,5" />

            <!-- Listado de Recorridos -->
            <CollectionView ItemsSource="{Binding Recorridos}"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="#E8F5E9" CornerRadius="8">
                            <StackLayout>
                                <Label Text="{Binding Nombre}" FontSize="16" FontAttributes="Bold" />
                                <Label Text="{Binding NombreCortejo, StringFormat='Cortejo: {0}'}" />
                                <Label Text="{Binding LugarPartida, StringFormat='Lugar: {0}'}" />
                                <Label Text="{Binding DuracionRecorrido, StringFormat='Duración: {0} min'}" />
                            </StackLayout>

                            <!-- Detectar tap y ejecutar comando -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:HomeViewModel}}, Path=SeleccionarRecorridoCommand}" 
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botón Cerrar Sesión al final -->
            <Button Text="Cerrar Sesión" Command="{Binding LogoutCommand}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>







