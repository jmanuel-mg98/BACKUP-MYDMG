<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MyDMG_app.ViewModels"
             x:Class="MyDMG_app.Views.HomePage"
             Title="Inicio">

    <ContentPage.BindingContext>
        <viewModels:HomeViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Bienvenido a MyDMG App" FontSize="26" HorizontalOptions="Center"/>

            <Label Text="{Binding NombreUsuario}" FontSize="20" HorizontalOptions="Center"/>
            <Label Text="{Binding Hermandad}" FontSize="20" HorizontalOptions="Center"/>

            <Button Text="Crear Cortejo" 
                    Command="{Binding CrearCortejoCommand}" 
                    BackgroundColor="#007AFF" 
                    TextColor="White"/>

            <Label Text="Mis Cortejos:" FontSize="18" FontAttributes="Bold"/>

            <CollectionView ItemsSource="{Binding Cortejos}"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" CornerRadius="10" BackgroundColor="#EEE">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:HomeViewModel}}, Path=SeleccionarCortejoCommand}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout>
                                <Label Text="{Binding NombreCortejo}" FontSize="16" FontAttributes="Bold"/>
                                <Label Text="{Binding NParticipantes, StringFormat='Participantes: {0}'}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

            <Button Text="Cerrar SesiÃ³n" 
                    Command="{Binding LogoutCommand}" 
                    BackgroundColor="Red" 
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>







